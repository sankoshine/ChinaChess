public abstract class ChessPiece implements Movable{
	
	private int x, y;
	public String name;

	public ChessPiece(int a, int b, String n) {
		x=a;y=b;name=n;
	}

	public void setLocation(int x1, int y1) {
		if(x1<0||y1<0||x1>9||y1>8){
			System.out.println("out of edge");
			return ;
		}
		if(x1==x&&y1==y){
			System.out.println("did not move");
			return ;
		}
		if(isLegal(x,y,x1,y1)){
			x = x1;
			y = y1;
			System.out.println("ok move "+name+" to "+x+" "+y);
		}
		else System.out.println("invalid route");
	}

	public int getXLocation() {
		return x;
	}

	public int getYLocation() {
		return y;
	}

	public abstract boolean isLegal(int x,int y,int x1,int y1);

}
