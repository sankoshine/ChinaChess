public class Chapter3n1
    {
    public static void main(String[] args)
        {
        Person person1 = new Person() ;
        Person person2 = new Person() ;
        Person FanLJ = new Person();
        
        person1.setForename("John") ;
        person1.setSurname("Smith") ;
        person1.setAge(24) ;

        person2.setForename("Peter") ;
        person2.setSurname("Wright") ;
        person2.setAge(19) ;
        
        FanLJ.setForename("Fan");
        FanLJ.setSurname("Lingjie");
        FanLJ.setAge(21);

        System.out.print("the second person is ") ;
        System.out.print(person2.getForename()) ;
        System.out.print(" ") ;
        System.out.print(person2.getSurname()) ;
        System.out.print(" (") ;
        System.out.print(person2.getAge()) ;
        System.out.println(")") ;

        System.out.println() ;
    
        System.out.print("the first person is ") ;
        System.out.print(person1.getForename()) ;
        System.out.print(" ") ;
        System.out.print(person1.getSurname()) ;
        System.out.print(" (") ;
        System.out.print(person1.getAge()) ;
        System.out.println(")") ;
        
        System.out.println();
        
        System.out.print("I am ") ;
        System.out.print(FanLj.getForename()) ;
        System.out.print(" ") ;
        System.out.print(FanLj.getSurname()) ;
        System.out.print(" (") ;
        System.out.print(FanLJ.getAge()) ;
        System.out.println(")") ;
        }

    }
