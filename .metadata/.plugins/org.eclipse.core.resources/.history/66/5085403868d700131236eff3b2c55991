public abstract class ChessPiece implements Movable {

	private int x, y, team;
	private String name;

	public ChessPiece(int a, int b, String n, int t) {
		x = a;
		y = b;
		name = n;
		team = t;
	}

	public boolean setLocation(int x1, int y1) {
		if (x1 < 0 || y1 < 0 || x1 > 9 || y1 > 8) {
			System.out.println("Out of Edge");
			return false;
		}
		if (x1 == x && y1 == y) {
			System.out.println("Did Not Move");
			return false;
		}
		if (isLegal(x, y, x1, y1)) {
			if(Board.getName(, b))
			x = x1;
			y = y1;
			System.out.println("ok Move " + name + " to " + x + " " + y);
			return true;
		}
		System.out.println("Invalid Route");
		return false;
	}

	public int getX() {
		return x;
	}

	public int getY() {
		return y;
	}

	public int getTeam() {
		return team;
	}

	public String getName(){
		return name;
	}
	public abstract boolean isLegal(int x, int y, int x1, int y1);

}
